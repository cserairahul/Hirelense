datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String     @id @default(cuid())
  clerkId  String     @unique
  resumes  Resume[]
  analyses Analysis[]
}

model Resume {
  id        String     @id @default(cuid())
  title     String
  rawText   String
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  analyses  Analysis[] // ✅ Opposite relation to Analysis.resume
}

model Job {
  id        String     @id @default(cuid())
  title     String
  jdText    String
  createdAt DateTime   @default(now())
  analyses  Analysis[] // ✅ Opposite relation to Analysis.job
}

model Analysis {
  id           String   @id @default(cuid())
  resumeId     String
  jobId        String
  score        Int
  missingTerms String[]
  createdAt    DateTime @default(now())
  userId       String

  resume Resume @relation(fields: [resumeId], references: [id])
  job    Job    @relation(fields: [jobId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}
